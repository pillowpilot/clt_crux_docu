{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "sender": {
      "type": "object",
      "properties": {
        "display_name": { "type": "string" }
      },
      "required": ["display_name"]
    },
    "receiver": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "source_id": {
      "type": "string"
    },
    "channel": {
      "enum": ["whatsapp-business", "mobile", "website", "email"]
    },
    "channel_details": {
      "type": "object",
      "$comment": "More fields depeding on the channel"
    },
    "user_details": {
      "type": "object",
      "properties": {
        "codigo_cliente": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "timestamp",
    "sender",
    "receiver",
    "body",
    "source_id",
    "channel"
  ]
}

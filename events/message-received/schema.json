{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "type": "object",
  "properties": {
    "type": {
      "const": "v0.users.message_received"
    },
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "sender": {
      "type": "string"
    },
    "receiver": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "source_id": {
      "type": "string"
    },
    "channel": {
      "enum": ["whatsapp-business", "mobile", "TBD..."]
    },
    "channel_details": {
      "type": "object"
    },
    "user_details": {
      "type": "object"
    }
  },
  "required": [
    "type",
    "timestamp",
    "sender",
    "receiver",
    "body",
    "source_id",
    "channel"
  ]
}

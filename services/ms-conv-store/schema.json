{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConversationHeader",
  "type": "object",
  "properties": {
    "uuid": {
      "type": "string",
      "format": "uuid"
    },
    "active_channel": {
      "enum": ["whatsapp-business", "mobile", "website", "email"]
    },
    "source_id": {
      "type": "string"
    },
    "user_details": {
      "type": "object"
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fallback_text": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["uuid", "active_channel", "messages"]
}
